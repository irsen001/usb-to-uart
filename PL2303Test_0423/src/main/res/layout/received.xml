        </RelativeLayout>-->
        <RelativeLayout
            android:id="@+id/item_tip3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left">
            <LinearLayout
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fvc_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FEV1/FVC:  "
                    android:textColor="@color/WHITE"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/fevfvc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- -"
                    android:textColor="@color/WHITE"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/fvc_tiptip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" %"
                    android:textColor="@color/WHITE"
                    android:textSize="18dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/fvc_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提示："
                android:layout_marginTop="18dp"
                android:layout_marginLeft="220dp"
                android:textColor="@color/WHITE"
                android:textSize="18dp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/frame_image3"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/line" />
        <TextView
            android:id="@+id/test_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/RED"
            android:text="C5 5C 01 00 01"
            android:textSize="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="完成测量"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/re_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:text="刷新数据"
        android:textSize="20dp"/>
